@using Microsoft.AspNetCore.Http
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<partial name="~/Views/Layout/_Head.cshtml" />

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="index.html" class="site_title"><i class="fa fa-stethoscope"></i> <span>@ViewData["Title"]</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img src="~/build/images/user.png" alt="..." class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span>@Context.Session.GetString("Name")</span>
                            <h2>@Context.Session.GetString("Role")</h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    <partial name="~/Views/Layout/_SideBar.cshtml" />
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small" >                        
                        <a style="width:100%" data-toggle="tooltip" data-placement="top" title="Logout" href="/Logout">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <!-- top navigation -->
            <partial name="~/Views/Layout/_TopNav.cshtml" />
            <!-- /top navigation -->
            <!-- page content -->
            @RenderBody()
            <!-- /page content -->
            <!-- footer content -->
            <partial name="~/Views/Layout/_Footer.cshtml" />
            <!-- /footer content -->
        </div>
    </div>
    @RenderSection("Scripts", required: false)

</body>
</html>
